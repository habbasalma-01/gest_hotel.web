@model gest_hotel.web.Models.Entities.Client

@{
    ViewData["Title"] = "Connexion";
}


<section class="vh-50" style="background-color: rgba(255, 255, 255, 0.5);">

    <div class="container py-5 h-80">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-9">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/Images/loginPage.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Login" method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-building fa-2x me-3" style="color: #007bff;"></i>
                                        <span class="h1 fw-bold mb-0">Radisson</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
                                    <label for="email">Email</label>
                                    <div data-mdb-input-init class="form-outline mb-4 rounded-pill border border-dark text-white p-2">
                                        

                                        <input type="email" id="email" name="email" class="form-control form-control-lg bg-transparent text-dark" placeholder="Email" required />
                                    </div>

                                    <label for="password">Password</label>
                                    <div data-mdb-input-init class="form-outline mb-4 rounded-pill border border-dark text-white p-2">
                                        <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Votre mot de passe" required />
                                        
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="pt-1 mb-4">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                    </div>

                                   
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a asp-action="Register" 
                                                                  style="color: #393f81;">Register here</a>
                                    </p>
                                    
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>