@{
    ViewData["Title"] = "Inscription";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Sophistique</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .card {
            width: 100%;
            max-width: 500px;
            margin: 100px auto;
            background-color: rgba(0, 0, 0, 0.8);
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
        }

        .card-header {
            background-color: rgba(255, 0, 0,0.7);
            border-bottom: none;
            font-weight: bold;
            font-size: 24px;
            text-align: center;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .form-group row {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #fff;
            color: #000;
            border-color: #fff;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #ff0000;
                color: #fff;
            }

        .btn-link {
            color: #fff;
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="card">
        <div class="card-header" style="color : white">Inscription</div>

        <div class="card-body">
            <form method="post" action="@Url.Action("Register", "Account")">
                <div class="form-group row">
                    <label for="Nom" class="col-md-4 col-form-label text-md-right" style="color : white">Nom</label>
                    <div class="col-md-8">
                        <input id="Nom" type="text" class="form-control" name="Nom" required autofocus>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Prenom" class="col-md-4 col-form-label text-md-right" style="color : white">Prénom</label>
                    <div class="col-md-8">
                        <input id="Prenom" type="text" class="form-control" name="Prenom" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Email" class="col-md-4 col-form-label text-md-right" style="color : white">E-Mail</label>
                    <div class="col-md-8">
                        <input id="Email" type="email" class="form-control" name="Email" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Telephone" class="col-md-4 col-form-label text-md-right" style="color : white">Téléphone</label>
                    <div class="col-md-8">
                        <input id="Telephone" type="tel" class="form-control" name="Telephone" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="password" class="col-md-4 col-form-label text-md-right" style="color : white">Mot de passe</label>
                    <div class="col-md-8">
                        <input id="password" type="password" class="form-control" name="password" required>
                    </div>
                </div>

                <div class="form-group row mb-0">
                    <div class="col-md-8 offset-md-4">
                        <button type="submit" class="btn btn-primary">
                            S'inscrire
                        </button>
                        <a class="btn btn-link" href="@Url.Action("Login", "Account")" style="color : white">
                            Vous avez déjà un compte? 
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
