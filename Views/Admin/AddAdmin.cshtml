@{
    ViewData["Title"] = "Add Admin";
}
@{
    Layout = null; // Pour ignorer le layout principal
}

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ajouter un administrateur</title>
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            position: relative;
            min-height: 100vh;
            width: 100%;
            background-color: #f3f3f3;
        }

        .containerr {
            margin: 50px auto;
            max-width: 800px;
            padding: 20px;
            border-radius: 20px;
            background-color: rgba(0, 0, 0, 0.5); /* Fond noir transparent */
            color: white; /* Couleur du texte */
        }

        h1 {
            color: red; /* Couleur du titre */
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: white; /* Couleur des étiquettes */
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: white; /* Fond blanc pour les champs de saisie */
            color: black; /* Couleur du texte */
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: red; /* Couleur de fond du bouton */
            color: white; /* Couleur du texte du bouton */
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: darkred; /* Couleur de fond du bouton au survol */
            }
    </style>
</head>
<body>

    <div class="containerr">
        <h1>Add Admin</h1>

        <form method="post" action="@Url.Action("AddAdmin", "Admin")">
            <div class="form-group">
                <label for="firstname">First Name:</label>
                <input type="text" class="form-control" id="firstname" name="firstname" required>
            </div>
            <div class="form-group">
                <label for="lastname">Last Name:</label>
                <input type="text" class="form-control" id="lastname" name="lastname" required>
            </div>
            <div class="form-group">
                <label for="email">Email address:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>