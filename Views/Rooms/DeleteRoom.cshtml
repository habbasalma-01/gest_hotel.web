<!-- Views/Rooms/DeleteRoom.cshtml -->
@model gest_hotel.web.Models.Entities.Chambre

@{
    Layout = null; // Pour ignorer le layout principal
}

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .white-background {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="white-background">
        <h1>Supprimer la chambre</h1>

        <h3>Êtes-vous sûr de vouloir supprimer la chambre :</h3>
        <div>
            <h4>Type de chambre: @Model.TypeChambre</h4>
            <h4>Description: @Model.Description</h4>
            <h4>Prix par nuit: @Model.PrixParNuit</h4>
            <h4>Disponibilité: @Model.Disponibilite</h4>
        </div>
        <form asp-action="DeleteRoom">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            <a asp-action="RoomHotel" asp-controller="Admin" class="btn btn-default">Annuler</a>
        </form>
    </div>
</body>
</html>
