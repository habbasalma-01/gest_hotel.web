<div class="container mt-4">
    <div class="card  border-0" style="background-color:rgba(0, 0, 0, 0.5);">
        <div class="card-body">
            <h1 style="color:red; font-weight:bold;">My Reservations</h1>
            <div style="max-height: 300px; overflow-y: auto;">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="color:white;">Date d'arrivée</th>
                                <th style="color:white;">Date de départ</th>
                                <th style="color:white;">Statut</th>
                                <th style="color:white;">Montant Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model)
                            {
                                <tr>
                                    <td style="color:white;">@reservation.DateArrivee.ToShortDateString()</td>
                                    <td style="color:white;">@reservation.DateDepart.ToShortDateString()</td>
                                    <td style="color:white;">@reservation.Statut</td>
                                    <td style="color:white;">@reservation.MontantTotal</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-red">No reservations found.</p>
                }
            </div>
        </div>
    </div>
</div>